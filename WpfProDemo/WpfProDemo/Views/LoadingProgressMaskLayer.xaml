<UserControl x:Class="WpfProDemo.Views.LoadingProgressMaskLayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid  Width="auto" Height="auto" Background="Gray">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <ProgressBar Name="LoadingBar" Width="500" Height="50"></ProgressBar>
            <Label Name="loadingProgressValueLabel" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="20"/>
            <TextBlock Margin="0,20,0,0" FontSize="50" VerticalAlignment="Center" HorizontalAlignment="Center">Loading...</TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
